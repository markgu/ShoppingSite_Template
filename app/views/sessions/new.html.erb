<h1>Login</h1>

<% if flash[:error] %>
<div id="error_explanation">
  <%= flash[:error] %>
</div>
<% end %>

<%= form_for :session, url: {action: "create" } do |f| %>
    <div class="field">
      <%= f.label :userId %><br>
      <%= f.text_field :userId %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
