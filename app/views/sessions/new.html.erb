<h1>Login</h1>

<% if flash[:error] %>
<div id="error_explanation">
  <% flash[:error] if flash[:error] %>
</div>
<% end %>

<%= form_for :session do |f| %>
    <div class="field">
      <%= f.label :userId, "UserId" %><br>
      <%= f.text_field :userId %>
    </div>
    <div class="field">
      <%= f.label :password, "Password" %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit("Log on") %>
    </div>
<% end %>
