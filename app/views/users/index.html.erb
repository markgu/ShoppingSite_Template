<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Password</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userId %></td>
        <td><%= user.firstName %></td>
        <td><%= user.lastName %></td>
        <td><%= user.password %></td>
        <td><%= user.street %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.postcode %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

